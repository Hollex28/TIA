#	smallest_domain 
#	smallest_domain_by_degree
#
;
\verbose : 
	display_solutions 
#	display_csp
#	display_filtering
#	display_search
#       display_intervals
;

##############################
###       VARIABLES        ###
############################## 

\vi : pan 2..5;
\vi : hamburgesa 1..5;
\vi : beicon,cebolla,queso 0..3;

##############################
###      CONTRAINTES       ###
############################## 
#apartado 3.1
\ci : dospanesporhamburgesa , pan = hamburgesa + 1 ;
\doc: complemento
		\ci: res2doc1, beicon != 0;
	\or
		\ci: res2doc2, queso != 0;
	\or
		\ci: res2doc3, cebolla != 0;
;
